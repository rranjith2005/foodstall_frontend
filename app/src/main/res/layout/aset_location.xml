<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background"
    tools:context=".Aset_locationActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/card_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/text_primary"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set Stall Location"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@+id/setLocationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView style="@style/FormLabelStyle" android:text="Owner ID" />
            <EditText
                android:id="@+id/ownerIdEditText"
                style="@style/FormInputStyle"
                android:hint="Enter owner ID (e.g., S36500654)" />

            <TextView style="@style/FormLabelStyle" android:text="Stall Name" />
            <EditText
                android:id="@+id/stallNameEditText"
                style="@style/FormInputStyle"
                android:hint="Enter stall name (e.g., Campus Cafe)" />

            <TextView
                style="@style/FormLabelStyle"
                android:layout_marginTop="24dp"
                android:text="Choose Location Method" />

            <RadioGroup
                android:id="@+id/locationRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/autoFetchRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto Fetch Location (GPS)"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/manualEntryRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Manually" />

                <RadioButton
                    android:id="@+id/mapPickerRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select on Map" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/coordinatesLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/latitudeEditText"
                    style="@style/FormInputStyle"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Latitude"/>
                <EditText
                    android:id="@+id/longitudeEditText"
                    style="@style/FormInputStyle"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="Longitude"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/mapCard"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                android:visibility="gone">
                <org.osmdroid.views.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/setLocationButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/brand_pink"
        android:text="Set Location"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>