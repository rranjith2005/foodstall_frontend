<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".UsettingsActivity">


    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF6B6B"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow_white"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Header Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/editProfileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/sai"
                        app:civ_border_color="#FF6B6B"
                        app:civ_border_width="2dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sai G.J"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View and edit profile"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#CCCCCC" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- GENERAL Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp"
                android:text="GENERAL"
                android:textStyle="bold"
                android:textColor="#888888"/>
            <LinearLayout
                android:id="@+id/notificationsLayout"
                style="@style/SettingsItemStyle">
                <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_settings_notifications"/>
                <TextView style="@style/SettingsTextStyle" android:text="Notifications" />
                <ImageView style="@style/SettingsArrowStyle" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/privacyLayout"
                style="@style/SettingsItemStyle">
                <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_settings_privacy"/>
                <TextView style="@style/SettingsTextStyle" android:text="Privacy Policy" />
                <ImageView style="@style/SettingsArrowStyle" />
            </LinearLayout>
            <!-- Help & Support is now in the GENERAL section -->
            <LinearLayout
                android:id="@+id/helpLayout"
                style="@style/SettingsItemStyle">
                <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_settings_help"/>
                <TextView style="@style/SettingsTextStyle" android:text="Help and Support" />
                <ImageView style="@style/SettingsArrowStyle" />
            </LinearLayout>

            <!-- ACCOUNT Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp"
                android:text="ACCOUNT"
                android:textStyle="bold"
                android:textColor="#888888"/>
            <!-- Location Preferences is now in the ACCOUNT section -->
            <LinearLayout
                android:id="@+id/locationLayout"
                style="@style/SettingsItemStyle">
                <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_settings_location"/>
                <TextView style="@style/SettingsTextStyle" android:text="Location Preferences" />
                <ImageView style="@style/SettingsArrowStyle" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/changePasswordLayout"
                style="@style/SettingsItemStyle">
                <ImageView style="@style/SettingsIconStyle" android:src="@drawable/ic_settings_password"/>
                <TextView style="@style/SettingsTextStyle" android:text="Change Password" />
                <ImageView style="@style/SettingsArrowStyle" />
            </LinearLayout>

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="Logout"
                android:textColor="#D32F2F"
                app:backgroundTint="#FFE5E5"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_logout"
                app:iconTint="#D32F2F"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>