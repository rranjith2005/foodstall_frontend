<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/reviewerInitials"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/initials_background"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="RK" />

    <TextView
        android:id="@+id/reviewerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/reviewerInitials"
        app:layout_constraintTop_toTopOf="@id/reviewerInitials"
        app:layout_constraintEnd_toStartOf="@id/reviewDate"
        android:layout_marginEnd="8dp"
        tools:text="Ranjith Kumar" />

    <TextView
        android:id="@+id/reviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/reviewerName"
        app:layout_constraintBottom_toBottomOf="@id/reviewerName"
        tools:text="2025-09-18" />

    <RatingBar
        android:id="@+id/reviewRatingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="true"
        app:layout_constraintStart_toStartOf="@id/reviewerName"
        app:layout_constraintTop_toBottomOf="@id/reviewerName"
        tools:rating="1.5" />

    <TextView
        android:id="@+id/reviewText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        app:layout_constraintStart_toStartOf="@id/reviewerName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewRatingBar"
        tools:text="hood" />

    <ImageButton
        android:id="@+id/deleteReviewButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        tools:visibility="visible"
        app:tint="@color/brand_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewText"
        android:contentDescription="Delete Review" />

</androidx.constraintlayout.widget.ConstraintLayout>