<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".Aprivacy_policyActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF6B6B"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow_white"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin Policy &amp; Terms"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions for Administrators"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Last Updated: 07 September 2025"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <TextView
                style="@style/PolicyHeaderStyle"
                android:text="1. Admin Responsibilities" />

            <TextView
                style="@style/PolicyBodyStyle"
                android:text="As an Administrator of Stall Spot, you are granted elevated privileges to manage the platform. Your responsibilities include, but are not limited to, reviewing and processing new stall applications, managing stall information, setting stall locations, and monitoring platform activity. You agree to exercise these responsibilities with fairness and integrity." />

            <TextView
                style="@style/PolicyHeaderStyle"
                android:text="2. Data Access and Confidentiality" />

            <TextView
                style="@style/PolicyBodyStyle"
                android:text="Your administrative account has access to sensitive information, including stall owner details, user data, and sales analytics. You agree to maintain the confidentiality of this data and access it only for legitimate administrative purposes. Unauthorized sharing, distribution, or misuse of this data is strictly prohibited and will result in immediate termination of your account." />

            <TextView
                style="@style/PolicyHeaderStyle"
                android:text="3. Account Security" />

            <TextView
                style="@style/PolicyBodyStyle"
                android:text="You are responsible for maintaining the security of your administrative login credentials. Do not share your password with anyone. Any actions taken through your account will be considered your own. Report any suspected unauthorized access to our security team immediately." />

            <TextView
                style="@style/PolicyHeaderStyle"
                android:text="4. Prohibited Activities" />

            <TextView
                style="@style/PolicyBodyStyle"
                android:text="As an administrator, you are prohibited from engaging in any activity that could harm the integrity of the Stall Spot platform. This includes, but is not limited to, unfairly favoring or penalizing stalls, manipulating sales data, creating fraudulent accounts, or violating the privacy of our users and stall owners." />

            <TextView
                style="@style/PolicyHeaderStyle"
                android:text="5. Contact for Admins" />

            <TextView
                style="@style/PolicyBodyStyle"
                android:layout_marginBottom="24dp"
                android:text="For any administrative queries or to report a security concern, please contact us at admin.support@stallspot.com." />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
